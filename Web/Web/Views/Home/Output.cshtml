@model test1.Models.ProductContext
    

@{
    ViewData["Title"] = "Список товаров";
}
<table class="table">
    <tr>
        <th>Модель</th>
        <th>Производитель</th>
        <th>Цена</th>
        <th></th>
    </tr>

    @foreach (var item in Model.GetProducts())
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Company</td>
            <td>
                @item.Price.ToString("c")
            </td>            
        </tr>
    }
</table>